# =============================================================================
# API Keys
# =============================================================================

# xAI (Grok) - Get from https://console.x.ai/
XAI_API_KEY=your-xai-api-key-here

# OpenAI - Used for embeddings (LightRAG default embedding model)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Supabase - Get from https://supabase.com/dashboard (project settings > API)
# =============================================================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase PostgreSQL direct connection (Settings > Database)
POSTGRES_HOST=db.your-project-ref.supabase.co
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password-here
POSTGRES_DATABASE=postgres

# =============================================================================
# LightRAG Settings
# =============================================================================
LIGHTRAG_WORKING_DIR=./rag_storage
